.passenger-list {
  color: #333;
  font-size: 28rpx;
  padding-bottom: 80rpx;
}
.passenger-list .passenger-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 25rpx;
  margin-bottom: 8rpx;
}
.passenger-list .passenger-item .icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 25rpx;
}
.passenger-list .passenger-item .passenger-content {
  flex: 1;
  display: flex;
  align-items: center;
}
.passenger-list .passenger-item .passenger-content .content {
  flex: 1;
  line-height: 50rpx;
}
.passenger-list .passenger-item .passenger-content .arrow-icon {
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.passenger-add {
  position: fixed;
  bottom: 0;
  background: #1989fa;
  color: #fff;
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.edit-content {
  color: #333;
  font-size: 26rpx;
  background: #fff;
  border-radius: 10rpx;
  width: 710rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  margin: 20rpx auto 0;
}
.edit-content .edit-item {
  display: flex;
  padding: 30rpx 10rpx;
  border-bottom: 1rpx solid #ebedf0;
}
.edit-content .edit-item .edit-name {
  width: 140rpx;
  display: flex;
}
.edit-content .edit-item .edit-name .must {
  color: red;
  margin-right: 4rpx;
}
.edit-content .edit-item .edit-input {
  flex: 1;
}
.edit-content .edit-item:last-of-type {
  border-bottom: none;
}
.edit-default {
  color: #333;
  font-size: 26rpx;
  background: #fff;
  width: 710rpx;
  margin: 20rpx auto 0;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.edit-button-content {
  margin: 80rpx 0;
}
.edit-button-content .edit-button {
  color: #333;
  width: 690rpx;
  height: 80rpx;
  font-size: 26rpx;
  border-radius: 80rpx;
  text-align: center;
  line-height: 80rpx;
  margin: 30rpx auto 0;
  font-weight: bold;
  border: 1rpx solid #dcdee0;
  background: #fff;
}
.edit-button-content .edit-button.save {
  background: #1989fa;
  color: #fff;
  border: none;
  border: 1rpx solid #1989fa;
}
.edit-button-content .edit-button.del {
  background: orangered;
  color: #fff;
  border: none;
  border: 1rpx solid orangered;
}

