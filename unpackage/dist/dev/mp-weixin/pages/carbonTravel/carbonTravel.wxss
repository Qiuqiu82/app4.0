
.action-button {
	padding: 12px 10px;
	border: 2px solid #41a863;
	background-color: #41a863;
	color: #ffffff;
	border-radius: 30px 30px;
	font-size: 16px;
	cursor: pointer;
	transition: background-color 0.3s;
	margin-top: 50px;
}
.button-row {
	display: flex;
	justify-content: space-around;
	margin: 0px 10px;
}
.top-button {
	padding: 1px 24px;
	border: 2px solid #41a863;
	background-color: transparent;
	color: #41a863;
	border-radius: 8px;
	font-size: 16px;
	cursor: pointer;
	transition: background-color 0.3s;
}
.text-center {
	font-weight: bold;
	display: flex;
	justify-content: center;
	margin-top: 40px;
	font-size: 18px
}
.text-top {
	font-weight: bold;
	display: flex;
	font-size: 20px
}
.icon {
    width: 50px; /* 设置图片宽度 */
    height: 80rpx;
}

